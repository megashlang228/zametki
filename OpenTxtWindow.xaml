<Window x:Class="zametki.OpenTxtWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zametki"
        mc:Ignorable="d"
        Title="OpenTxtWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tb_title" Height="20" VerticalAlignment="Top"></TextBox>
        <TextBox AcceptsReturn="True" x:Name="tb_text" Margin="0 ,20, 0, 0"/>
        <Button x:Name="btn_save" Width="50" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="btn_save_Click"></Button>
    </Grid>
</Window>
